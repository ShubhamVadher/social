<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>User Profile</title>
    <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-gray-100">

    <!-- Profile Section -->
    <div class="flex justify-center mt-10">
        <div class="w-2/3 bg-white rounded-xl shadow-lg p-8">
            <!-- Profile Info -->
            <div class="flex items-center mb-6">
                <img src="<%=user.photo%>" alt="Profile Picture" class="w-24 h-24 rounded-full mr-6">
                <div>
                    <h2 class="text-2xl font-bold"><%= user.username %></h2>
                    <p class="text-gray-500"><%= user.email %></p>
                </div>
            </div>
            
            <!-- Edit Profile Form -->
            <a href="/user/editprofile/<%=user._id%>" class="bg-blue-500 text-white px-6 py-2 rounded-lg">Edit Profile</a>    
        

            <!-- Logout Button -->
            <a href="/user/logout" class="bg-red-500 text-white px-6 py-2 rounded-lg">Logout</a>

            <a href="/user/createpost/<%=user._id%>" class="bg-yellow-500 text-white px-6 py-2 rounded-lg">Create Post</a>

            <a href="/user/seeposts/<%=user._id%>" class="bg-yellow-500 text-white px-6 py-2 rounded-lg">See Posts By Others</a>


        </div>
    </div>

    
    <!-- Posts Section -->
    
    <div class="w-2/3 mx-auto mt-10">
        <h3 class="text-2xl font-semibold mb-6">Your Posts</h3>

        <%user.posts.reverse().forEach((post)=>{%>
            <div class="bg-white rounded-lg shadow-md p-6 mb-6">
                
                <p class="text-gray-700 mb-4">
                    <%=post.content%>
                </p>
            
                
                <div class="flex space-x-4 mb-4">
                    
                    <img src="<%=post.image%>" alt="Post Image" class="w-1/3 rounded-lg object-cover">
            
                    
                    <video src="<%=post.video%>" controls class="w-2/3 rounded-lg"></video>
                </div>
                
                <h1><%=post.likes.length%></h1>
                
                <div class="flex items-center space-x-4">
                    
                    <a href="/user/like/<%=post._id%>/<%=user._id%>" class="bg-blue-500 text-white px-4 py-2 rounded-lg hover:bg-blue-600 transition"><%=post.likes.indexOf(user._id)===-1?"Like":"Unlike"%></a>
            
                    
                    <a href="/user/editpost/<%=post._id%>" class="bg-yellow-500 text-white px-4 py-2 rounded-lg hover:bg-yellow-600 transition">Edit</a>
            
                    
                    <a href="/user/delete/<%=post._id%>" class="bg-red-500 text-white px-4 py-2 rounded-lg hover:bg-red-600 transition">Delete</a>
                </div>
            </div>
        <%})%>
        


        

        <!-- Add more posts as needed -->

    </div>

   

</body>
</html>



