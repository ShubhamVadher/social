<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>User Profile</title>
    <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-gray-100">

    <!-- Profile Section -->
    <div class="flex justify-center mt-10">
        <div class="w-2/3 bg-white rounded-xl shadow-lg p-8">
            <!-- Profile Info -->
            <div class="flex items-center mb-6">
                <img src="<%= user.profilePic || 'https://via.placeholder.com/150' %>" alt="Profile Picture" class="w-24 h-24 rounded-full mr-6">
                <div>
                    <h2 class="text-2xl font-bold"><%= user.username %></h2>
                    <p class="text-gray-500"><%= user.email %></p>
                </div>
            </div>
            
            <!-- Edit Profile Form -->
            <h3 class="text-xl font-semibold mb-4">Edit Profile</h3>
            <form action="/profile/editProfile/user._id" method="POST">
                <input type="text" name="username" value="<%= user.username %>" placeholder="Username" class="mb-4 px-4 py-2 w-full rounded-lg border border-gray-300">
                <input type="email" name="email" value="<%= user.email %>" placeholder="Email" class="mb-4 px-4 py-2 w-full rounded-lg border border-gray-300">
                <input type="text" name="profilePic" value="<%= user.profilePic %>" placeholder="Profile Picture URL" class="mb-4 px-4 py-2 w-full rounded-lg border border-gray-300">
                <button type="submit" class="bg-blue-500 text-white px-6 py-2 rounded-lg">Save Changes</button>
            </form>

            <!-- Logout Button -->
            <form action="/logout" method="POST" class="mt-6">
                <button type="submit" class="bg-red-500 text-white px-6 py-2 rounded-lg">Logout</button>
            </form>
        </div>
    </div>

    <!-- Posts Section -->
    <div class="w-2/3 mx-auto mt-10">
        <h3 class="text-2xl font-semibold mb-4">Your Posts</h3>
        <div class="space-y-6">
            <% user.posts.forEach(post => { %>
                <div class="bg-white p-4 rounded-lg shadow-md">
                    <p class="text-gray-600 mb-2"><%= post.content %></p>
                    <div class="flex justify-between items-center">
                        <div>
                            <form action="/profile/like/<%= post._id %>" method="POST">
                                <button type="submit" class="text-blue-500">
                                    <%= post.likes.includes(user._id) ? "Unlike" : "Like" %>
                                </button>
                            </form>
                            <span class="text-gray-400 ml-2"><%= post.likes.length %> Likes</span>
                        </div>
                        
                        <!-- Edit & Delete Post -->
                        <div class="space-x-4">
                            <form action="/profile/deletePost/<%= post._id %>" method="POST" class="inline-block">
                                <button type="submit" class="text-red-500">Delete</button>
                            </form>
                            <button class="text-blue-500">Edit</button>
                        </div>
                    </div>
                </div>
            <% }) %>
        </div>
    </div>

</body>
</html>
