<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>User Profile</title>
    <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-gray-50">

    <!-- Back to Profile Button -->
    <div class="w-full bg-blue-600 py-4">
        <div class="container mx-auto px-4 flex justify-between items-center">
            <h1 class="text-white text-2xl font-bold">User Posts</h1>
            <a href="/user/profile" class="bg-white text-blue-600 px-4 py-2 rounded-lg hover:bg-blue-100 transition font-medium">
                Back To Profile
            </a>
        </div>
    </div>

    <!-- Posts Section -->
    <div class="w-2/3 mx-auto mt-8">
        <h3 class="text-3xl font-bold text-gray-800 mb-6">All Posts</h3>

        <% posts.reverse().forEach((post) => { %>
        <div class="bg-white rounded-lg shadow-lg overflow-hidden mb-8">
            <!-- Post Content -->
            <div class="p-6">
                <p class="text-gray-700 mb-4 text-lg leading-relaxed">
                    <%= post.content %>
                </p>

                <!-- Media Section -->
                <div class="flex flex-wrap gap-4 mb-6">
                    <% if (post.image) { %>
                    <img src="<%= post.image %>" alt="Post Image" class="w-1/3 rounded-lg object-cover shadow-md">
                    <% } %>
                    <% if (post.video) { %>
                    <video src="<%= post.video %>" controls class="w-full rounded-lg shadow-md"></video>
                    <% } %>
                </div>

                <!-- Likes and Actions -->
                <div class="flex items-center justify-between">
                    <!-- Like Button -->
                    <div class="flex items-center space-x-3">
                        <h1><%=post.likes.length%> Like</h1>
                        <a href="/user/like/<%= post._id %>/<%= user._id %>" 
                           class="bg-blue-500 text-white px-4 py-2 rounded-lg hover:bg-blue-600 transition font-medium">
                            <%= post.likes.indexOf(user._id) === -1 ? "Like" : "Unlike" %>
                        </a>
                        
                    </div>

                    
                </div>
            </div>
        </div>
        <% }) %>
    </div>

    <!-- Footer -->
    <footer class="w-full bg-gray-800 py-4 mt-8">
        <div class="container mx-auto px-4 text-center text-gray-400">
            <p>&copy; 2024 Your Website. All Rights Reserved.</p>
        </div>
    </footer>

</body>
</html>
